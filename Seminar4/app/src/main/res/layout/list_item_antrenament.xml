<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/focusLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Focus:"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/focusData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chest"
            android:textSize="20dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/ziSaptLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ziua Saptamanii:"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"/>

        <TextView
            android:id="@+id/ziSaptData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Luni" />

        <TextView
            android:id="@+id/dataLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Data:"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"/>

        <TextView
            android:id="@+id/dataData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12-12-2012" />

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/nrExercitiiLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Numar Exercitii:"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp" />

        <TextView
            android:id="@+id/nrExercitiiData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3" />

        <TextView
            android:id="@+id/durataLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Durata:"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp" />

        <TextView
            android:id="@+id/durataData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="45" />
        <TextView
            android:id="@+id/durataDataUM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" min" />

    </LinearLayout>
</LinearLayout>